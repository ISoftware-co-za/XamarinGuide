<Page
    x:Class="ISoftware.Xamarin.Platforms.UWP.Layout.PageLayoutStackPanelVertical"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uwp="using:ISoftware.Xamarin.Platforms.UWP"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <uwp:Toolbar Grid.Row="0" Title="StackPanel (Vertical)" />
        
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Border Background="{StaticResource YellowBrush}" Height="50" Width="200"></Border>
            <Border Background="{StaticResource GreyBrush}" Height="30" Width="100" Margin="0,20,0,0"></Border>
            <Border Background="{StaticResource SteelBlueBrush}" Height="60" Width="300" Margin="0,20,0,0"></Border>
            <Border Background="{StaticResource RedBrush}" Height="100" Width="100" Margin="0,20,0,0"></Border>
        </StackPanel>

    </Grid>
</Page>
