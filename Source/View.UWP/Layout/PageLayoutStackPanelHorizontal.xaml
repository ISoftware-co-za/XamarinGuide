<Page
    x:Class="ISoftware.Xamarin.Platforms.UWP.Layout.PageLayoutStackPanelHorizontal"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uwp="using:ISoftware.Xamarin.Platforms.UWP"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <uwp:Toolbar Grid.Row="0" Title="StackPanel (Horizontal)" />

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Border Background="{StaticResource YellowBrush}" Height="200" Width="50"></Border>
            <Border Background="{StaticResource GreyBrush}" Height="100" Width="30" Margin="20,0,0,0"></Border>
            <Border Background="{StaticResource SteelBlueBrush}" Height="300" Width="60" Margin="20,0,0,0"></Border>
            <Border Background="{StaticResource RedBrush}" Height="100" Width="100" Margin="20,0,0,0"></Border>
        </StackPanel>

    </Grid>
</Page>
