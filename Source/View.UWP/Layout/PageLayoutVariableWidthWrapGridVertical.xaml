<Page
    x:Class="ISoftware.Xamarin.Platforms.UWP.Layout.PageLayoutVariableWidthWrapGridVertical"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uwp="using:ISoftware.Xamarin.Platforms.UWP"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <uwp:Toolbar Grid.Row="0" Title="VariableWidthWrapGrid" />
        
        <VariableSizedWrapGrid Grid.Row="1" ItemWidth="100" ItemHeight="100" MaximumRowsOrColumns="3" Orientation="Vertical">
            <Border Background="{StaticResource YellowBrush}" Margin="10"></Border>
            <Border Background="{StaticResource GreyBrush}" Margin="10"></Border>
            <Border Background="{StaticResource SteelBlueBrush}" Margin="10"></Border>
            <Border Background="{StaticResource RedBrush}" Margin="10"></Border>
        </VariableSizedWrapGrid>

    </Grid>
</Page>
